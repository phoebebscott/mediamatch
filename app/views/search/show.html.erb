<!-- This is where a user can see the search result and rate the movie - -1 for Bomb, 0 for Bookmark, and 1 for Laud -->
<% if @movie != nil %>
<%= form_for [@movie] do |f| %>
<div id="saveRating">
<%= submit_tag "Rating", :value => 0 %>
</div>
<br>
<div id="searchRating">
<%= submit_tag "Rating", :value => 1 %>
<%= image_tag @movie.poster %>
<%= submit_tag "Rating", :value => -1 %>
</div>
<% end %>
<% else %>
<% end %>
